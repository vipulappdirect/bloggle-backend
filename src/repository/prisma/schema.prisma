generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  passwordHash String
  posts        Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String   @db.Text
  content   String   @db.Text
  imageURL  String   @default("https://via.placeholder.com/500x250.png?text=Default+Image") @db.VarChar(2000)
  authorId  Int
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id])

  @@index([authorId])
}
